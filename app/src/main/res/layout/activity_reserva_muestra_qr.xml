<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondouniversidad"
    android:orientation="vertical"
    tools:context=".interfaces.Pant_reserva_resultado">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.gridlayout.widget.GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/id_Puro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center"
                android:text="Sistema Inventario De Bodega DTI Chillan"
                android:textColor="@drawable/texto_adicionales"
                android:textSize="24sp"
                android:textStyle="italic"
                android:typeface="serif"
                app:layout_column="0"
                app:layout_columnSpan="3"
                app:layout_gravity="center"
                app:layout_row="0"

                />


            <TextView

                android:id="@+id/datos_qr_reserva"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center"
                android:text=""
                android:textColor="@drawable/texto_adicionales"
                android:textSize="16sp"
                android:textStyle="italic"
                android:typeface="serif"
                app:layout_column="0"
                app:layout_columnSpan="3"
                app:layout_gravity="fill"
                app:layout_row="2"
                android:background="@drawable/panel_curvo"
                android:textIsSelectable="true"/>



            <Button
                android:id="@+id/boton_articulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/boton_punt_curva"
                android:text="Ir a Articulo"
                android:textColor="@drawable/boton_event_efecto"
                android:textSize="18sp"
                android:typeface="serif"
                app:layout_column="1"
                app:layout_columnSpan="2"
                app:layout_gravity="center"
                app:layout_row="7"
                />

            <TextView
                android:id="@+id/espacio_______nullo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="100dp"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="100dp"
                android:layout_marginRight="100dp"
                android:layout_marginBottom="100dp"
                android:text="TextView" />


        </androidx.gridlayout.widget.GridLayout>
    </ScrollView>

</LinearLayout>